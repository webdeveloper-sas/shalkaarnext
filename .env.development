# Development Environment Configuration
# Copy to .env.local and adjust as needed

# ==========================================
# Core Configuration
# ==========================================
NODE_ENV=development
API_PORT=3333
API_URL=http://localhost:3333

# ==========================================
# Database Configuration (Local/Neon Dev)
# ==========================================
DATABASE_URL=postgresql://user:password@localhost:5432/shalkaarnext
DATABASE_POOL_SIZE=5
DATABASE_TIMEOUT=5000

# ==========================================
# Authentication & JWT (Use any long random string for dev)
# ==========================================
JWT_SECRET=dev-secret-key-change-this-in-production-minimum-32-characters-long
JWT_EXPIRATION=15m
JWT_REFRESH_SECRET=dev-refresh-secret-key-change-in-production-minimum-32-characters-long
JWT_REFRESH_EXPIRATION=7d

# ==========================================
# Frontend URLs
# ==========================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-nextauth-secret-key-minimum-32-characters-required-for-dev
ADMIN_NEXTAUTH_URL=http://localhost:3001
ADMIN_NEXTAUTH_SECRET=dev-admin-nextauth-secret-key-minimum-32-characters-required-for-dev

# ==========================================
# Payment Processing (Mock by default)
# ==========================================
PAYMENT_GATEWAY=mock
# Optional: Uncomment for local Stripe testing
# STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
# STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
PAYMENT_TIMEOUT_MS=30000
PAYMENT_RETRY_ATTEMPTS=3

# ==========================================
# Email Configuration (Mock by default)
# ==========================================
EMAIL_PROVIDER=mock
# Optional: Configure SMTP for local testing
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM_EMAIL=noreply@shalkaar.com
# SMTP_FROM_NAME=SHALKAAR
EMAIL_TIMEOUT_MS=10000

# ==========================================
# Webhook Configuration
# ==========================================
WEBHOOK_TIMEOUT_MS=30000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY_MS=1000

# ==========================================
# Logging & Monitoring
# ==========================================
LOG_LEVEL=debug
# Optional: Sentry for error tracking
# SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ==========================================
# Frontend Configuration (Public Only)
# ==========================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:3333/api/v1
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key
NEXT_PUBLIC_ADMIN_EMAIL_DOMAIN=@shalkaar.com
NEXT_PUBLIC_ENABLE_ARTISAN_PROGRAM=true
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_WISHLISTS=true
NEXT_PUBLIC_ENABLE_SUBSCRIPTIONS=false
NEXT_PUBLIC_APP_NAME=SHALKAAR (Development)
NEXT_PUBLIC_SUPPORT_EMAIL=support@shalkaar.com

# ==========================================
# Security
# ==========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
TRUSTED_PROXIES=127.0.0.1,::1
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

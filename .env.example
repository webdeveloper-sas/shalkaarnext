# Project-wide environment variables
# Copy this to .env.local and fill in your values

# ==========================================
# API Configuration
# ==========================================
API_PORT=3333
API_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/shalkaar
DATABASE_SSL=false
DATABASE_LOGGING=true

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# ==========================================
# Storefront Configuration
# ==========================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:3333/api/v1
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-change-in-production

# ==========================================
# Admin Dashboard Configuration
# ==========================================
ADMIN_API_BASE_URL=http://localhost:3333/api/v1
ADMIN_NEXTAUTH_URL=http://localhost:3001
ADMIN_NEXTAUTH_SECRET=your-admin-nextauth-secret-change-in-production
NEXT_PUBLIC_ADMIN_EMAIL_DOMAIN=@shalkaar.com

# ==========================================
# Payment Processing (Stripe)
# ==========================================
STRIPE_PUBLIC_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_secret

# ==========================================
# Email Configuration
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@shalkaar.com
SMTP_PASS=your-app-password
SMTP_FROM_NAME=SHALKAAR
SMTP_FROM_EMAIL=noreply@shalkaar.com

# ==========================================
# Cloud Storage (Cloudinary or Similar)
# ==========================================
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_CLOUD_NAME=your_cloud_name

# ==========================================
# Analytics and Monitoring
# ==========================================
NEXT_PUBLIC_GA_ID=your_google_analytics_id
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info

# ==========================================
# Feature Flags
# ==========================================
ENABLE_ARTISAN_PROGRAM=true
ENABLE_REVIEWS=true
ENABLE_WISHLISTS=true

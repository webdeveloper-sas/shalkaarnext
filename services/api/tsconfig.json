{
  "extends": "../../tsconfig.base.json",
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "types": [
      "jest",
      "node"
    ],
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": false,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": false,
    "declarationMap": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shalkaar/shared-types": ["../../packages/shared-types/src/index.ts"],
      "@shalkaar/shared-utils": ["../../packages/shared-utils/src/index.ts"],
      "@shalkaar/shared-ui": ["../../packages/shared-ui/src/index.tsx"],
      "@shalkaar/api-client": ["../../packages/api-client/src/index.ts"],
      "@shalkaar/config": ["../../packages/config/src/index.ts"],
      "@shalkaar/logging": ["../../packages/logging/src/index.ts"],
      "@shalkaar/resilience": ["../../packages/resilience/src/index.ts"],
      "@shalkaar/security": ["../../packages/security/src/index.ts"],
      "@shalkaar/deployment-tools": ["../../packages/deployment-tools/src/index.ts"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}



{
  "name": "shalkaarnext-api",
  "version": "1.0.0",
  "description": "SHALKAAR NestJS Backend API",
  "main": "dist/main.js",
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "start": "node dist/main",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "typeorm": "typeorm-ts-node-commonjs",
    "typeorm:migration:create": "typeorm-ts-node-commonjs migration:create",
    "typeorm:migration:run": "typeorm-ts-node-commonjs migration:run -d src/database/typeorm.config.ts",
    "typeorm:migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/database/typeorm.config.ts",
    "seed": "ts-node src/database/seeds/index.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.10",
    "@nestjs/core": "^10.2.10",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/typeorm": "^9.0.1",
    "@shalkaarnext/shared-types": "workspace:*",
    "@shalkaarnext/shared-utils": "workspace:*",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
